@using CreepySuits.Repository
@using CreepySuits.Models
@model IEnumerable<CreepySuits.Models.Product>

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Category</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Price
        </th>
        
        <th>
            
        </th>
       
        <th></th>
    </tr>

@foreach (var item in (List<Product>)ViewBag.products) {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @item.Price
        </td>
        <td>
            <img src="@Url.Content("~/ProjectDocuments/Images/" + item.PicUrl)" alt="" width="100" />
        </td>
      
    </tr>
}

</table>
